{
    "manifest_version": 2,
    "default_locale": "en",

    "name": "GH Actions Flexible Interface",
    "description": "This extension extends GH actions menu. Gives the abilities: folders, rename workflows, group builds",
    "version": "0.3.13",

    "icons": {
        "48": "images/48x48.png",
        "96": "images/96x96.png",
        "128": "images/128x128.png",
        "256": "images/256x256.png",
        "512": "images/512x512.png",
        "1024": "images/1024x1024.png"
    },

    "background": {
        "scripts": [ "background.js" ],
        "persistent": false
    },

    "content_scripts": [{
        "js": [ "main.js" ],
        "matches": [ "https://github.com/**/*" ]
    }],

    "browser_action": {
        "default_icon": {
            "16": "images/16x16.png",
            "32": "images/32x32.png",
            "48": "images/48x48.png",
            "64": "images/64x64.png",
            "96": "images/96x96.png"
        }
    },

    "permissions": [ ]
}
